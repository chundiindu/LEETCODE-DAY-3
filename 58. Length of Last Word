class Solution {
    public int lengthOfLastWord(String s) {
        String[] lastword = s.split("\\s");
         return lastword[lastword.length-1].length();
        
    }
}


class Solution {
    public int lengthOfLastWord(String s) {
       s = s.trim();
        int result=0;
            for(int i=s.length()-1;i>=0;i--)
            {
                if(s.charAt(i)!=' ')
                {
                    result++;
                }
                else
                {
                    break;
                }
            }
        return result;
        
    }
}
